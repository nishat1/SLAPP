<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/slappbg"
tools:context="com.example.nisha.lumohacks2017.LandingMenu">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/linearLayout">



</LinearLayout>

    <TextClock
        android:id="@+id/textClock"
        android:gravity="top"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp" />

    <TextView
        android:id="@+id/randomGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Welcome Back"
        android:layout_below="@+id/textClock"
        android:layout_marginTop="16dp"
        android:layout_alignRight="@+id/textClock"
        android:layout_alignEnd="@+id/textClock"
        android:layout_alignLeft="@+id/textClock"
        android:layout_alignStart="@+id/textClock" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User's Name!"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/randomGreeting"
        android:layout_alignRight="@+id/randomGreeting"
        android:layout_alignEnd="@+id/randomGreeting"
        android:layout_alignLeft="@+id/randomGreeting"
        android:layout_alignStart="@+id/randomGreeting" />

</RelativeLayout>